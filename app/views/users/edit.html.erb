<% provide(:title, "Account") %>
<%= form_for(@user) do |f| %>
  <h5>Your Account Details</h5>
  <% if current_user.subscription.paid_user? %>
    <div class="alert alert-success">
      Paid Account.  If you have questions about your account you can send an email for <%= link_to "support.", "mailto:support@" + request.host.to_s %>
    </div>
  <% else %>
    <div class="alert alert-error">
      You are on a Trial Account.  <%= link_to "Click here", purchase_path %> if you want to buy Search Word Creator!
    </div>
  <% end %> 

  <%= render 'fields', f: f %>
	
  <%= f.submit "Create My Account", class: "btn btn-large btn-primary" %>
<% end %>
