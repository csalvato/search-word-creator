<% provide(:title, 'Sign up') %>
<% content_for :mixpanel_tracking do %>
	<script type="text/javascript">
	  $(document).ready( function(){
        mixpanel.track("Seeing Sign Up Page");
        mixpanel.track_forms("#new_user", "Sign Up Form Submission")
    });
  </script>
<% end %>

<%= form_for(@user) do |f| %>
	<h5>Sign up</h5>
  <%= render 'fields', f: f %>
	<div class="signin-button">
    <p>Already have an account? <%= link_to "Sign in here.", signin_path %><p>
    <%= f.submit "Create My Account", class: "btn" %>
  </div>
<% end %>
